{
  "coc.preferences.formatOnType": true,
  "diagnostic.enableMessage": "never",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic-languageserver.formatFiletypes": { "sh": "shfmt" },
  "diagnostic-languageserver.filetypes": {
    "sh": {
      "shellcheck": {
        "args": ["--external-sources"]
      }
    }
  },
  "git.blameUseRealTime": true,
  "git.enableGutters": true,
  "git.splitWindowCommand": "below sp",
  "lua.checkForUpdates": "disabled",
  "Lua.diagnostics.globals": ["vim"],
  "Lua.window.statusBar": false,
  "Lua.window.progressBar": false,
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": ["**/.git/**"],
  "list.previewHighlightGroup": "CocPreviewHi",
  "list.previewToplineStyle": "middle",
  "list.indicator": ":",
  "list.menuAction": true,
  "list.alignColumns": true,
  "list.floatPreview": true,
  "list.nextKeymap": "<c-n>",
  "list.previousKeymap": "<c-p>",
  "list.insertMappings": {
    "<c-f>": "prompt:right",
    "<c-b>": "prompt:left",
    "<c-d>": "prompt:deletebackward",
    "<c-t>": "action:tabe",
    "<c-s>": "action:split",
    "<c-v>": "action:vsplit",
    "<c-r>": "do:refresh",
    "<c-l>": "do:previewtoggle",
    "<c-j>": "do:previewdown",
    "<c-k>": "do:previewup",
    "<c-o>": "feedkeys!",
    "<c-q>": "feedkeys!",
    "<c-g>": "feedkeys!",
    "<c-x>": "feedkeys!"
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "sql": {
      "command": "sqls",
      "args": ["-config", "$HOME/.config/sqls/config.yml"],
      "filetypes": ["sql"],
      "shell": true
    }
  },
  "leetcode.language": "golang",
  "notification.border": false,
  "notification.marginRight": 0,
  "prettier.singleQuote": false,
  "python.formatting.provider": "black",
  "suggest.maxCompleteItemCount": 16,
  "suggest.enablePreselect": false,
  "translator.engines": ["google"],
  "workspace.rootPatterns": [".git", ".gitignore"]
}
